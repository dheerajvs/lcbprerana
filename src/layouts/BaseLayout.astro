---
import Header from 'components/Body/Header.astro'
import Footer from 'components/Body/Footer.astro'

export interface Props {
  title: string
}

const { title } = Astro.props as Props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="theme-color" content="#112e57" />
    <link rel="icon" type="image/png" href="/img/favicon.png" />
    <title
      >{(title ? `${title} - ` : '') + 'Lions Club of Bangalore Prerana'}</title
    >
    <link rel="stylesheet" href="/css/splide.min.css" />
  </head>
  <body>
    <Header {title} />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --color-bg: #f5f5f5;
    --color-fg: #363636;

    --color-pri-bg: #112e57;
    --color-pri-fg: #fff;
    --color-sec-bg: #f9c910;
    --color-sec-fg: #000;

    --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
    --font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
    --font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);
  }

  html {
    background-color: var(--color-bg);
    color: var(--color-fg);
    font-family: BlinkMacSystemFont, -apple-system, 'Segoe UI', 'Roboto',
      'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans',
      'Helvetica Neue', 'Helvetica', 'Arial', sans-serif;
    font-size: var(--font-size-base);
    box-sizing: border-box;
  }

  *,
  *:before,
  *:after {
    box-sizing: inherit;
  }

  body {
    display: flex;
    flex-direction: column;
    margin: 0;
    min-height: 100vh;
  }

  main {
    flex-grow: 1;
    padding: 1.375rem 1rem 1rem;
  }

  h1 {
    font-size: var(--font-size-xl);
  }

  h2 {
    background-image: linear-gradient(var(--color-sec-bg), var(--color-sec-bg));
    background-position: bottom left;
    background-repeat: no-repeat;
    background-size: min(68px, 100%) 4px;
    font-size: var(--font-size-lg);
    font-weight: 500;
    margin-top: 0;
    margin-bottom: 1.125rem;
    padding-bottom: 0.625rem;
  }

  p {
    line-height: 1.375rem;
    margin-top: 0;
    margin-bottom: 1rem;
  }

  input:focus,
  textarea:focus {
    border-color: var(--color-sec-bg);
    box-shadow: 0 0 6px var(--color-sec-bg);
    outline: 1px solid var(--color-sec-bg);
  }

  .card {
    background-color: #fff;
    border-radius: 0.375rem;
    box-shadow: 0 2px 3px rgb(10 10 10 / 10%), 0 0 0 1px rgb(10 10 10 / 10%);
  }

  .card-content {
    padding: 1rem;
  }

  .card-image {
    border-top-left-radius: 0.375rem;
    border-top-right-radius: 0.375rem;
    max-width: 100%;
  }

  .underline {
    background-color: var(--color-sec-bg);
  }
</style>
