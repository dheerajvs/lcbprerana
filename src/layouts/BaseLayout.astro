---
  import './index.css'
  import Header from 'components/Header/Header.astro'
  import Footer from 'components/Footer/Footer.astro'
  import Aside from 'components/Aside.astro'

  export interface Props {
    title: string
  }

  const { title } = Astro.props as Props
  const baseTitle = 'Lions Club of Bangalore Prerana'
---

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <meta name="theme-color" content="#112e57" />
  <link rel="icon" type="image/png" href="/img/favicon.png" />
  <title>{(title ? `${title} - ` : '') + baseTitle}</title>
</head>

<body>
  <div class="layout">
    <Header {title} />
    <main>
      <!-- <h1 class="title">{title || baseTitle}</h1> -->
      <slot />
    </main>
    <Aside />
  </div>
  <Footer />
</body>

</html>

<style>
  .layout {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .title {
    display: none;
  }

  @media screen and (min-width: 901px) {
    .layout {
      align-self: center;
      flex-direction: row;
      justify-content: space-between;
      max-width: 75rem;
      width: 100%;
    }

    .title {
      background-image: linear-gradient(var(--color-sec-bg),
          var(--color-sec-bg));
      background-position: bottom left;
      background-repeat: no-repeat;
      background-size: min(68px, 100%) 4px;
      display: block;
      padding-bottom: 0.625rem;
    }
  }
</style>
