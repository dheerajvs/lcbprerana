---
import officers from 'data/officers.json'
import PersonIcon from './person.astro'
---

<h2>Office Bearers</h2>
<ul>
  {officers.map(officer => (
    <li>
      <div class="img-wrapper">
        {
          officer.photo
            ? <img src={officer.photo} alt="" width="56" height="56"/>
            : <PersonIcon />
        }
      </div>
      <div class="name-plate">
        <div class="name">{officer.name}</div>
        <div class="title">{officer.title}</div>
      </div>
    </li>
  ))}
</ul>

<style>
  ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
  }

  li {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
    padding: 0 0.5rem;
  }
  li:last-child {
    margin-bottom: 0;
  }

  .img-wrapper {
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    width: 56px;
    height: 56px;
  }

  .name-plate {
    display: flex;
    flex-direction: column;
    padding: 0.5rem 0.75rem;
  }

  .name {
    font-size: 1rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .title {
    font-size: small;
    text-transform: uppercase;
  }
</style>
