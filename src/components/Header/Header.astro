---
  import DesktopHeader from './DesktopHeader.astro'
  import MobileHeader from './MobileHeader.astro'

  export interface Props {
    title: string
  }

  const { title } = Astro.props as Props
---

<header>
  <DesktopHeader {title} />
  <MobileHeader {title} />
</header>

<style>
  header {
    position: sticky;
    top: -3.5rem;
    z-index: 10;
  }

  @media screen and (min-width: 901px) {
    header {
      max-width: 15rem;
      width: 100%;
    }
  }

  @media screen and (display-mode: minimal-ui) {
    header {
      top: 0;
    }
  }
</style>
